<%= main_title("Amministratori") %>  

<% @organizations.each do |organization| %>  
  <div>
    <div class="bg-warning p-2 my-1" onclick="hide_and_show(this)" style="cursor: pointer">
      <%= organization %>
    </div>
    <div class="hide_and_show" style="display: none">
      <div>
        <ul class="list-group my-3">
          <% organization.permissions.each do |p|%>  
            <li class="list-group-item py-1">
              <strong><%= link_to p.user.cn_militar, permission_path(p) %></strong>
              (<%= p.authlevel_string %>)
              <span class="float-right"><%= link_to_delete permission_path(p) %></span>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="text-center">
        <%= link_to 'Nuovo utente amministratore', new_organization_permission_path(organization.id), class: 'btn btn-primary my-2' %>
      </div>
    </div>
  </div>
<% end %>

<%= javascript_tag do %>  
  function hide_and_show(e) {
    x = e.nextElementSibling;
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
<% end %>
